@model Umbraco.Forms.Mvc.Models.FieldViewModel
<select name="@Model.Name" id="@Model.Id" class="form-control"
@if (Model.Mandatory){<text> data-val="true" data-val-required="@Model.RequiredErrorMessage"</text>}
>
    <option value="">Please Select</option>
    @foreach (var pv in Model.PreValues)
    {
        string[] itemValues = pv.Value.ToString().Split(';');
        string value = itemValues[0];
        
        <option value="@value" 
        @if (Model.ContainsValue(value))
        {<text>selected="selected"</text>}
        >@value</option>
    }
</select>
