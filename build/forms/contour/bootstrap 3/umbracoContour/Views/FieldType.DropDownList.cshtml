@model Umbraco.Forms.Mvc.Models.FieldViewModel
<select name="@Model.Name" class="form-control" id="@Model.Id"
@if (Model.Mandatory){<text> data-val="true" data-val-required="@Model.RequiredErrorMessage"</text>}
>
    <option value=""></option>
    @foreach (var pv in Model.PreValues)
    {
        <option value="@pv.Value.TrimEnd( Environment.NewLine.ToCharArray())" @if (Model.ContainsValue(pv.Value)) { <text> selected="selected" </text> }>@pv.Value.TrimEnd(Environment.NewLine.ToCharArray())</option>
    }
</select>
