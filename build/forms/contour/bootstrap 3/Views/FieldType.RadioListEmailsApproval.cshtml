@model Umbraco.Forms.Mvc.Models.FieldViewModel       

<span class="radiobuttonlist" id="@Model.Id">
@foreach (Umbraco.Forms.Mvc.Models.PrevalueViewModel pv in Model.PreValues)  
{
    string[] itemValues = pv.Value.ToString().Split(';');
    string label = itemValues[0];
    
    <input type="radio" name="@Model.Id" id="@string.Concat(Model.Id,"_",pv.Id)" value="@label" 
    @if (Model.Mandatory) {<text>data-val="true" data-val-requiredlist="@Model.RequiredErrorMessage"</text>}
    @if (Model.ContainsValue(label)){<text>checked="checked"</text>} 
           />
    <label for="@string.Concat(Model.Id,"_",pv.Id)">@label</label>
    <br />
}
</span>